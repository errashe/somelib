{
    "compilerOptions": {
      "strict": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "composite": true,
      "sourceMap": true,
      "declaration": true,
      "noImplicitThis": false,
      "target": "ES2017",
      "module": "ES6",
      "lib": ["DOM", "WebWorker"],
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "baseUrl": ".",
      "outDir": "./dist/",
      "paths": {
        "src/*": [
          "./src/*"
        ]
      },
      "stripInternal": true,
      "declarationMap": true,
      "declarationDir": "dist/types",
      "importHelpers": true
    },
    "include": [
      "./src/**/*",
    ],
    "exclude": ["node_modules"],
    "compileOnSave": false
  }
  